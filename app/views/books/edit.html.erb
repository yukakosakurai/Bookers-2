<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
    <%= @book.errors.count%>error
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Update Book' %>
<span><%=link_to 'Show', book_path %></span>
<span><%=link_to 'Back', books_path %></span>
<% end %>


