<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
    <%= @book.errors.count%>errors
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="container">
<div class="row">      
<div class="col-xs-3">       
<%= render 'users/list' , user:@user %>
<%= render 'users/post', book: @book %></div>
<div class="col-xs-9">
 <h2>Books</h2>
<table class="table">
<thead>
<tr>
<th></th>
<th><h4>Title</h4></th>
<th><h4>Opinion</h4></th>
</tr>
</thead>
<tbody>
<% @books.each do |book| %>
<tr>
<td>
<%= link_to attachment_image_tag(book.user, :profile_image, size:'50x50', format: 'jpg',fallback: "default.png" ),user_path(book.user) %>
</td>
<td>
<%=link_to book.title, book_path(book) %>
</td>
<td>
<%= book.body %>
</td>
</tr>
<% end %>
</tbody>
</table>
</div>
</div>
</div>
