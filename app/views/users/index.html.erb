<div class="container">    
<div class="row">
<div class="col-xs-3">      
<%= render 'users/list' , user:@user %>
<%= render 'users/post', book: @book %></div>
<div class="col-xs-9">
 <h2>Users</h2>
<table class="table">
<thead>
<tr>
<th></th>
<th><h4>image</h4></th>
<th><h4>name</h4></th>
</tr>
</thead>
<tbody>
<% @users.each do |user| %>
<tr>
<td>
<%= attachment_image_tag user, :profile_image, size:'50x50', format: 'jpg',fallback: "default.png" %>
</td>
<td>
<%= user.name %>
</td>
<td>
<%= link_to 'Show', user_path(user) %>
</td>
</tr>
<% end %>
</tbody>
</table>
</div>
</div>
</div>
