

<h2>New book</h2>
<%= form_for(book) do |f| %>
 <!--%= render 'layouts/error_messages', model: f.object %-->
<div class="field row">
<h4>Title</h4>
<%= f.text_field :title,  class:"col-xs-11 book_title" %>
</div>
<div class="field row">
<h4>Opinion</h4>
<%= f.text_area :body, class:"col-xs-11 book_body"  %>
</div>
<div class="actions row">
<br><%= f.submit 'Create Book' , class:"btn btn-primary col-xs-11"  %>
</div>
<% end %>
